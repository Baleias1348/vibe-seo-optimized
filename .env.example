# ======================================
# Configuración Base de la Aplicación
# ======================================

# URL base de la aplicación (sin / al final)
VITE_BASE_URL=https://chileaovivo.com

# ======================================
# Configuración de Supabase
# ======================================
VITE_SUPABASE_URL=tu_url_de_supabase
VITE_SUPABASE_ANON_KEY=tu_clave_anonima_de_supabase
VITE_SUPABASE_SERVICE_KEY=tu_clave_de_servicio_de_supabase

# ======================================
# Configuración de OpenWeatherMap
# ======================================
VITE_OPENWEATHER_API_KEY=tu_api_key_de_openweathermap
VITE_OPENWEATHER_BASE_URL=https://api.openweathermap.org/data/2.5

# ======================================
# Configuración de Entorno
# ======================================
# Modo de desarrollo: 'development' o 'production'
NODE_ENV=production

# Configuración de memoria para Node.js
NODE_OPTIONS=--max_old_space_size=4096

